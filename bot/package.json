{
  "name": "glitch_bot",
  "version": "0.0.1",
  "main": "dist/main.js",
  "author": "timothy1205",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -e ts --exec \"yarn build && node ./dist/main.js\"",
    "test": "ts-mocha test/**/*.spec.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "mongoose": "^5.9.26",
    "node-schedule": "^1.3.2",
    "tmi.js": "^1.5.0",
    "ts-mongoose": "^0.0.21",
    "twitch": "^4.3.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.0.0",
    "@types/mongoose": "^5.7.34",
    "@types/tmi.js": "^1.4.1",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.9.5"
  }
}
