{
  "name": "glitch_bot",
  "version": "0.0.1",
  "main": "dist/main.js",
  "author": "timothy1205",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -e ts --exec \"yarn build && node ./dist/main.js\"",
    "test": "cross-env NODE_ENV=test mocha --require ts-node/register test/**/*.spec.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "@twurple/api": "^5.0.0",
    "@twurple/eventsub": "^5.0.0",
    "@twurple/eventsub-ngrok": "^5.0.0",
    "mongoose": "^6.0.5",
    "tmi.js": "^1.7.1",
    "ts-node": "^10.2.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "@types/tmi.js": "^1.7.0",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.7",
    "source-map-support": "^0.5.19",
    "typescript": "^4.4.2"
  }
}
